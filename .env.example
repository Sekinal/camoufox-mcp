# Camoufox MCP Server - Environment Variables
# Copy this to .env and customize as needed

# =============================================================================
# Docker/VNC Configuration
# =============================================================================

# Enable VNC server for visual debugging (set to "true" to enable)
ENABLE_VNC=false

# VNC port (default: 5900)
VNC_PORT=5900

# noVNC web viewer port (default: 6080)
NOVNC_PORT=6080

# Environment label for logging
ENVIRONMENT=production

# =============================================================================
# Logging Configuration
# =============================================================================

# Log level: DEBUG, INFO, WARNING, ERROR
CAMOUFOX_LOG_LEVEL=INFO

# Log format: json (for production/aggregation) or console (for development)
CAMOUFOX_LOG_FORMAT=json

# Include timestamps in logs
CAMOUFOX_LOG_TIMESTAMPS=true

# Include caller info (file/line) in logs - useful for debugging
CAMOUFOX_LOG_CALLER=false

# =============================================================================
# Browser Configuration
# =============================================================================

# Run browser in headless mode
CAMOUFOX_HEADLESS=true

# Enable human-like cursor movement
CAMOUFOX_HUMANIZE=true

# Default viewport dimensions
CAMOUFOX_VIEWPORT_WIDTH=1920
CAMOUFOX_VIEWPORT_HEIGHT=1080

# Attempt auto-recovery on browser crash
CAMOUFOX_AUTO_RECOVER=true

# Maximum number of open pages/tabs
CAMOUFOX_MAX_PAGES=10

# =============================================================================
# Timeout Configuration (milliseconds)
# =============================================================================

# Navigation timeout (goto, reload, etc.)
CAMOUFOX_TIMEOUT_NAVIGATION=30000

# Selector wait timeout (wait_for_selector)
CAMOUFOX_TIMEOUT_SELECTOR=30000

# Network wait timeout (wait_for_request/response)
CAMOUFOX_TIMEOUT_NETWORK=30000

# Element action timeout (click, fill, etc.)
CAMOUFOX_TIMEOUT_ACTION=5000

# Screenshot timeout
CAMOUFOX_TIMEOUT_SCREENSHOT=10000

# JavaScript evaluation timeout
CAMOUFOX_TIMEOUT_JS=5000

# Browser launch timeout
CAMOUFOX_TIMEOUT_LAUNCH=60000

# =============================================================================
# Network Capture Configuration
# =============================================================================

# Enable network capture by default
CAMOUFOX_NETWORK_CAPTURE=true

# Capture request/response bodies by default (can be large!)
CAMOUFOX_NETWORK_BODIES=false

# Maximum network log entries to keep
CAMOUFOX_NETWORK_MAX_LOG=1000

# Maximum body size to capture (bytes)
CAMOUFOX_NETWORK_MAX_BODY=10000
